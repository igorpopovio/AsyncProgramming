<Window x:Class="AsyncProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncProgramming"
        mc:Ignorable="d"
        Title="Async Programming"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Button x:Name="LongTaskButton"
                Content="Long Running Task"
                Margin="0,0,0,10"
                Height="50"
                Click="LongTaskButton_Click" />
        <TextBlock x:Name="LongTaskTextBlock"
                   Text="Status"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"
                   FontWeight="Bold" />
        <Button x:Name="ShortTaskButton"
                Content="Short Running Task"
                Margin="0,0,0,10"
                Height="50"
                Click="ShortTaskButton_Click" />
        <TextBlock x:Name="ShortTaskTextBlock"
                   Text="Count"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   FontWeight="Bold" />
    </StackPanel>
</Window>
